{
  "name": "angular2-webpack",
  "version": "1.0.0",
  "description": "An Angular 2 webpack starter project example.",
  "author": "Patrick Hasenauer <patrick@outlook.de>",
  "license": "MIT",
  "keywords": [
    "angular2",
    "webpack",
    "typescript"
  ],
  "scripts": {
    "clean": "npm cache clean && rimraf dist && rimraf node_modules ",
    "clean:dist": "rimraf dist",
    "prebuild": "npm run clean:dist",
    "build:dev": "npm run prebuild & webpack --config ./config/webpack.dev.js --progress --profile --bail --display-error-details",
    "build:prod": "npm run prebuild & webpack --config ./config/webpack.prod.js --progress --profile --bail --display-error-details",
    "server:dev": "webpack-dev-server --config ./config/webpack.dev.js --progress --profile --watch --inline --hot --port 8080",
    "server:prod": "webpack-dev-server --config ./config/webpack.prod.js --progress --profile --port 8080"
  },
  "dependencies": {
    "@angular/common": "~2.1.1",
    "@angular/compiler": "~2.1.1",
    "@angular/core": "~2.1.1",
    "@angular/forms": "~2.1.1",
    "@angular/http": "~2.1.1",
    "@angular/platform-browser": "~2.1.1",
    "@angular/platform-browser-dynamic": "~2.1.1",
    "@angular/router": "~3.1.1",
    "core-js": "^2.4.1",
    "rxjs": " 5.0.0-rc.1",
    "zone.js": "^0.6.25",
    "bootstrap": "^3.3.7"
  },
  "devDependencies": {
    "@types/core-js": "^0.9.34",
    "@types/node": "^6.0.45",
    "rimraf": "^2.5.2",
    "typescript": "^2.0.6",
    "webpack": "^1.13.3",
    "webpack-dev-server": "^1.14.1",
    "webpack-merge": "^0.15.0",
    "null-loader": "^0.1.1",
    "raw-loader": "^0.5.1",
    "css-loader": "^0.25.0",
    "style-loader": "^0.13.1",
    "file-loader": "^0.9.0",
    "ts-loader": "^0.9.5",
    "html-loader": "0.4.4",
    "html-webpack-plugin": "^2.15.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "angular2-template-loader": "^0.5.0",
    "awesome-typescript-loader": "^2.2.4"
  }
}